{
  "name": "suomifi-ui-components",
  "version": "1.0.0",
  "description": "Suomi.fi UI component library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vrk-kpa/suomifi-ui-components.git"
  },
  "author": "Joonas Kallunki <jkallunki@gmail.com> (https://jkallunki.net/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vrk-kpa/suomifi-ui-components/issues"
  },
  "homepage": "https://github.com/vrk-kpa/suomifi-ui-components#readme",
  "scripts": {
    "start": "yarn styleguide",
    "start:webpack": "webpack --env.development",
    "test": "jest",
    "test:lint": "yarn test:tslint && yarn test:eslint",
    "test:tslint": "tslint --project tsconfig.json 'src/**/*.tsx'",
    "test:eslint": "eslint --config .eslintrc src/**/*.tsx",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prettier:check": "prettier-check 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "validate": "yarn test && yarn test:lint && yarn prettier:check",
    "prebuild": "rimraf dist",
    "build": "webpack --env.production",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build"
  },
  "devDependencies": {
    "@types/jest": "23.3.9",
    "awesome-typescript-loader": "5.2.1",
    "eslint": "5.9.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "husky": "1.1.4",
    "jest": "23.6.0",
    "jest-dom": "2.1.1",
    "lint-staged": "8.0.5",
    "prettier": "1.15.2",
    "prettier-check": "2.0.0",
    "react-docgen": "2.21.0",
    "react-docgen-typescript": "1.12.2",
    "react-styleguidist": "8.0.6",
    "react-testing-library": "5.3.0",
    "rimraf": "2.6.2",
    "styleguidist-goodies": "2.0.0",
    "ts-jest": "23.10.4",
    "ts-loader": "5.3.0",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-react": "3.6.0",
    "tslint-webpack-plugin": "1.2.2",
    "typescript": "3.1.6",
    "typescript-eslint-parser": "21.0.2",
    "webpack": "4.25.1",
    "webpack-cli": "3.1.2"
  },
  "dependencies": {
    "@emotion/core": "10.0.0",
    "@emotion/styled": "10.0.0",
    "@types/react": "16.7.7",
    "@types/react-dom": "16.0.9",
    "react": "16.6.3",
    "react-dom": "16.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier-check"
    ]
  }
}
